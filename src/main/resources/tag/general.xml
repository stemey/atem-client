	<bean id="tagentityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="persistenceUnitName" value="tag" />
		<property name="dataSource" ref="tagdataSource" />
		<property name="jpaVendorAdapter">
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
				<property name="database" value="MYSQL" />
				<property name="showSql" value="true" />
				<property name="generateDdl" value="true" />
			</bean>
		</property>
	</bean>

	<bean id="tagentityManager"
		class="org.springframework.orm.jpa.support.SharedEntityManagerBean">
		<property name="entityManagerFactory" ref="tagentityManagerFactory" />
	</bean>
	
	<bean id="tagTransactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="tagentityManagerFactory" />
	</bean>
	
	<jee:jndi-lookup id="tagdataSource" jndi-name="java:comp/env/jdbc/tag"/>
	

	<bean id="tagCrudService"
		class="org.atemsource.atem.service.jpa.JpaCrudService" >
		<property name="entityManager">
			<ref bean="tagentityManager"/>
		</property>
		<property name="jpaTransactionManager">
			<ref bean="tagTransactionManager"/>
		</property>
	</bean>
	
	
	
	

	<bean id="tag-json-repository" class="org.atemsource.atem.impl.json.JsonEntityTypeRepository">
		<property name="typeProperty" value="ext_type"/>
		<property name="services">
			<list>
				<bean class="org.atemsource.atem.utility.validation.AtemTypeAndConstraintValidationService">
					<property name="attributePathBuilderFactory" ref="atem-utility-attributePathBuilderFactory"/>
				</bean>
			</list>
		</property>
		<property name="objectMapper">
			<bean class="org.codehaus.jackson.map.ObjectMapper" />
		</property>
	</bean>


</beans>